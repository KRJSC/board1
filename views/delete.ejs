<!DOCTYPE html>
<html>
<head>
    <script src="/javascripts/jquery-1.11.2.min.js"></script>

    <link rel='stylesheet' href='/stylesheets/style.css'/>
</head>
<body>
<h1> 글삭제</h1>
<form action="/board/delete" method="post" onsubmit="return onWriteSubmit()">

    <table border="1">
        <tr>
            <td>번호</td>
            <td><input type="nubmer" name="idx" id="idx" value="<%=idx%>" required/></td>
        </tr>
        <tr>
            <td>패스워드</td>
            <td><input type="password" name="passwd" id="passwd" required/></td>
        </tr>
        <tr>
            <td colspan="2">
                <button type="submit">글삭제</button>
            </td>
        </tr>
    </table>
</form>
<script>

    function onWriteSubmit()
    {

        if ( $("#passwd").val().trim() == "" )
        {
            var message = "패스워드를 입력해 주세요";
            $("#passwd").val("");
            $("#passwd").focus();
            alert(message);
            return false;
        }
    }
</script>
</body>
</html>
